<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doimatkhau">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

    <TableRow
        android:layout_width="300dp"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/random64"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Old password"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/txt_oldpassword"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:ems="10"
            android:inputType="textPassword" />


    </TableRow>

        <TableRow
            android:layout_width="300dp"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/random6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="New password"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/txt_newpassword"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:ems="10"
                android:inputType="textPassword" />


        </TableRow>
        <TableRow
            android:layout_width="300dp"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/random436"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Confirm password"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/txt_confirmpassword"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:ems="10"
                android:inputType="textPassword" />


        </TableRow>
        <TableRow
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="20dp">
            <Button
                android:id="@+id/btn_xacnhan"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Submit"/>
        </TableRow>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>